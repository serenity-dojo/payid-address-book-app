{
  "name": "payid-address-book-app",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "dev:demo": "vite --mode demo",
    "build": "tsc -b && vite build",
    "lint": "eslint src --config eslint.config.js",
    "lint:fix": "eslint src --config eslint.config.js --fix",
    "preview": "vite preview",
    "test:cucumber": "npx cucumber-js --config cucumber.config.cjs",
    "test:cucumber:dry": "npx cucumber-js --config cucumber.config.cjs --dry-run",
    "test:cucumber:watch": "npx cucumber-js --config cucumber.config.cjs --watch",
    "test:cucumber:report": "npx cucumber-js --config cucumber.config.cjs && echo 'ðŸ“Š Report generated at reports/cucumber-report.html'",
    "test:cucumber:with-server": "start-server-and-test dev http://localhost:5173 test:cucumber",
    "test:cucumber:with-server-and-report": "start-server-and-test dev http://localhost:5173 test:cucumber:report",
    "test:playwright": "playwright test",
    "test:playwright:ui": "playwright test --ui",
    "test:playwright:headed": "playwright test --headed",
    "test:unit": "vitest",
    "test:unit:ui": "vitest --ui",
    "test:unit:coverage": "vitest --coverage",
    "test:all": "npm run test:unit run && npm run test:playwright && npm run test:cucumber:with-server",
    "test:all:report": "npm run npm run test:unit run && npm run test:playwright && test:cucumber:with-server-and-report && echo 'âœ… All tests completed successfully!'"
  },
  "dependencies": {
    "react": "^19.1.0",
    "react-dom": "^19.1.0"
  },
  "devDependencies": {
    "@cucumber/cucumber": "^12.1.0",
    "@cucumber/html-formatter": "^21.13.0",
    "@eslint/js": "^9.32.0",
    "@playwright/test": "^1.54.1",
    "@testing-library/jest-dom": "^6.6.4",
    "@testing-library/react": "^16.3.0",
    "@testing-library/user-event": "^14.6.1",
    "@types/node": "^24.1.0",
    "@types/react": "^19.1.8",
    "@types/react-dom": "^19.1.6",
    "@typescript-eslint/eslint-plugin": "^8.38.0",
    "@typescript-eslint/parser": "^8.38.0",
    "@vitejs/plugin-react": "^4.6.0",
    "eslint": "^9.32.0",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^5.2.0",
    "eslint-plugin-react-refresh": "^0.4.20",
    "globals": "^16.3.0",
    "jsdom": "^26.1.0",
    "start-server-and-test": "^2.0.13",
    "ts-node": "^10.9.2",
    "typescript": "~5.8.3",
    "typescript-eslint": "^8.35.1",
    "vite": "^7.0.4",
    "vitest": "^3.2.4"
  }
}
